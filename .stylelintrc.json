{
    "extends": [
        "stylelint-config-standard"
    ],
    "rules": {
        "selector-id-pattern": "[a-z]+",
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen"
                ]
            }
        ]
    }
}